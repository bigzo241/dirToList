                        <String fx:value="buttonStyle" />
                        <String fx:value="basicStyle" />
                     </styleClass>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Button disable="true" mnemonicParsing="false" text="Annuler">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                     <styleClass>
                        <String fx:value="buttonStyle" />
                        <String fx:value="basicStyle" />
                     </styleClass>
                  </Button>
               </children>
            </FlowPane>
         </children>
      </VBox>
